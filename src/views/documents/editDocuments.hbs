<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit document</h3>
        </div>
        <div class="card-body">
            <form action="/documents/edit-document/{{document._id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Nombre del documento"
                    value="{{document.title}}"/>
                </div>
                <div class="form-group">
                    <input type="file" value='examinar' name="examinar" placeholder="seleccione un archivo">
                </div>
                <div class="form-group">
                    <button type="submit" value="save" class="btn btn-primary btn-block">
                        Guardar cambios
                    </button>
                </div>
                <div class="form-group">
                    <button type="reset" name="bt-borrar" class="btn btn-primary btn-block btn-borrar">
                        Borrar
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>