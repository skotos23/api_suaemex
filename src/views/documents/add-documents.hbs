

<div class="col-md-4 mx-auto ">
    <div class="card">
    <div class="car-header">
        <h3>Nuevo documento</h3>
    </div>
    <div class="card-body">
        <form action="/documents/add" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Nombre del documento" autofocus>
        </div>
        <div class="form-group">
            <input type="file" value='examinar' name="examinar" placeholder="seleccione un archivo">

        </div>
         <div class="form-group">
            <button type="submit" value="Enviar" class="btn btn-primary btn-block">
                Enviar
            </button>
        </div> 
         <div class="form-group">
            <button type="reset" name="bt-borrar" class="btn btn-primary btn-block btn-borrar">
                Borrar
            </button>
        </div>

        </form>

    </div>
</div>
</div>